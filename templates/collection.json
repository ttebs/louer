{
  "sections": {
    "banner": {
      "type": "main-collection-banner",
      "settings": {
        "show_collection_description": true,
        "show_collection_image": false,
        "color_scheme": "background-1"
      }
    },
    "product-grid": {
      "type": "main-collection-product-grid",
      "custom_css": [
        "show-more-button .label-text,.facets__header-vertical {font-size: 12px; text-transform: uppercase;}",
        ".swym-button.swym-add-to-wishlist-view-product {position: absolute; right: 0; z-index: 9999999; width: 20px;}",
        ".grid__item {position: relative;}",
        ".swym-button.swym-add-to-wishlist-view-product.swym-heart.swym-added:after {display: none;}"
      ],
      "settings": {
        "products_per_page": 24,
        "columns_desktop": 3,
        "image_ratio": "square",
        "show_secondary_image": true,
        "show_tags": true,
        "show_vendor": false,
        "show_rating": false,
        "enable_quick_add": false,
        "enable_filtering": true,
        "filter_type": "vertical",
        "enable_sorting": true,
        "columns_mobile": "2",
        "padding_top": 36,
        "padding_bottom": 36
      }
    }
  },
  "order": [
    "banner",
    "product-grid"
  ]
}
