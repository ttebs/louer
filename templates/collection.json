{
  "sections": {
    "banner": {
      "type": "main-collection-banner",
      "settings": {
        "show_collection_description": true,
        "show_collection_image": false,
        "color_scheme": "background-1"
      }
    },
    "product-grid": {
      "type": "main-collection-product-grid",
      "custom_css": [
        ".facet-checkbox {font-size: 14px; text-transform: uppercase; padding: 0 7px 10px;}",
        ".facets__summary span,.facet-checkbox span,span,.facets__heading--vertical {font-size: 12px; text-transform: uppercase; color: #000;}",
        ".card__product-type {font-weight: bold;}",
        ".card__heading {font-size: 13px; text-transform: uppercase;}",
        ".grid__item .product-card-wrapper {display: flex; align-items: center; justify-content: center;}",
        ".grid__item .product-card-wrapper .card {display: flex; align-items: center; justify-content: center; width: 60%;}"
      ],
      "settings": {
        "products_per_page": 24,
        "columns_desktop": 3,
        "image_ratio": "square",
        "show_secondary_image": true,
        "show_tags": true,
        "show_vendor": false,
        "show_rating": false,
        "enable_quick_add": false,
        "enable_filtering": true,
        "filter_type": "vertical",
        "enable_sorting": true,
        "columns_mobile": "2",
        "padding_top": 36,
        "padding_bottom": 36
      }
    }
  },
  "order": [
    "banner",
    "product-grid"
  ]
}
