{{ 'customer.css' | asset_url | stylesheet_tag }}

{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  .grid--2-columns > .grid__item {
    background-color: #fafafa;
    padding: 20px 40px;
  }
  .grid--2-columns .grid__item h2 {
    text-transform: uppercase;
    color: #2f2b2b;
    font-size: 15px;
    margin-top: 12px;
    font-weight: bold;
  }
  .grid.grid--2-columns {
    gap: 60px;
    margin-top: 60px;
  }
  .grid.grid--3-columns {
    margin-top: 35px;
  }
  .grid--3-columns .grid__item {
    display: flex;
    align-items: center;
    flex-direction: column;
  }
  .grid--3-columns .grid__item > span {
    text-transform: uppercase;
    font-size: 13px;
    color: #2f2b2b;
  }
  .grid__item-body {
    text-align: left;
  }
  h3 {
    text-transform: uppercase;
    color: #2f2b2b;
    font-size: 15px;
    margin-top: 12px;
    font-weight: bold;
  }
  p {
    text-transform: uppercase;
    color: #2f2b2b;
    font-size: 12px;
    margin-top: 12px;
  }
  .customer form {
    margin-top: 0;
  }
  .cf-step-tabs .cf-step-counter {
    text-transform: uppercase;
    font-size: 13px;
  }
  .cf-step-tabs .cf-step-title {
    text-transform: uppercase;
    color: #2f2b2b;
    font-size: 15px;
    margin-top: 12px;
  }
  .grid__item form label {
    font-size: 13px;
    color: #2f2b2b;
  }
  [data-theme-name=Dawn] .cf-field input:not([type=checkbox]):not([type=radio]) {
    height: 25px;
    font-size: 13px;
    border: 1px solid #2f2b2b;
    box-shadow: none;
    padding: 15px;
    color: #2f2b2b;
  }
  [data-theme-name=Dawn] .cf-field .cf-select-wrap>select {
    height: 32px;
    font-size: 13px;
    border: 1px solid #2f2b2b;
    box-shadow: none;
    padding: 4px;
    color: #2f2b2b;
    background: #fff;
  }
  [data-cf-field-type=phone] .cf-phone-field .cf-country-picker select {
    height: 32px;
    font-size: 13px;
    border: 1px solid #2f2b2b;
    box-shadow: none;
    padding: 4px;
    color: #2f2b2b;
    background: #fff;
  }
  .cf-field-errors,
  .cf-error-message-header {
    font-size: 13px;
  }
  .cf-field-errors > li > div,
  .cf-field-description {
    font-size: 13px;
  }
  .cf-form-actions {
    display: flex;
    flex-direction: column;
    align-items: flex-end;
    justify-content: flex-end;
  }
  .cf-form-actions > button {
    background-color: #fff;
    color: #2f2b2b;
    border: 1px solid #2f2b2b;
    font-size: 13px;
    text-transform: uppercase;
    height: 40px;
    min-height: 0;
  }
  .grid__item-body-monthly-plan {
    margin-top: 30px;
  }
  .grid__item-body-monthly-plan > div {
    display: flex;
    align-items: center;
    justify-content: space-between;
  }
  .grid__item-body-monthly-plan > div > span {
    text-transform: uppercase;
    color: #2f2b2b;
    font-size: 12px;
    letter-spacing: 0px;
  }
  .grid__item-body-monthly-plan > p {
    text-transform: uppercase;
    color: #2f2b2b;
    font-size: 10px;
    letter-spacing: 0px;
  }

  @media screen and (max-width: 1024px) {
    .grid.grid--2-columns {
      flex-direction: column;
      align-items: center;
      justify-content: center;
      width: 100%;
    }
    .grid--2-columns > .grid__item {
      width: 100%;
      max-width: none;
    }
    .grid__item-body-monthly-plan > div {
      flex-wrap: wrap;
      width: 100%;
    }
    .grid__item-body-monthly-plan > div > span {
      width: 50%;
    }
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}

<div class="customer register section-{{ section.id }}-padding">
  <svg style="display: none">
    <symbol id="icon-error" viewBox="0 0 13 13">
      <circle cx="6.5" cy="6.50049" r="5.5" stroke="white" stroke-width="2"/>
      <circle cx="6.5" cy="6.5" r="5.5" fill="#EB001B" stroke="#EB001B" stroke-width="0.7"/>
